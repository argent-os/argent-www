packages: 
  yum:
    gcc-c++: []
    make: []
    git: []
commands:
  01_get_sudo:
    command: echo Defaults:root \!requiretty >> /etc/sudoers 
  02_epl_install: 
    command: sudo yum install epel-release
  03_npm_install:
    command: sudo yum install nodejs
  04_npm_install_bower:
    command: sudo npm install -g bower
container_commands:
  04_bower_install:
    command: sudo bower install --allow-root